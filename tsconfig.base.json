{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": ".",
    "downlevelIteration": true,
    "lib": ["dom", "es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "preserveConstEnums": true,
    "sourceMap": false,
    "strictNullChecks": false,
    "target": "es2017",
    "typeRoots": [ "node_modules/@types" ],
    "types": ["node"]
  },
  "include": ["src"]
}
